{
  "name": "letterboxd-clone-backend",
  "version": "1.0.0",
  "description": "Backend API for Letterboxd clone - a social film logging platform",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate:up": "node-pg-migrate up -f migrate.config.js",
    "migrate:down": "node-pg-migrate down -f migrate.config.js",
    "migrate:create": "node-pg-migrate create -f migrate.config.js"
  },
  "keywords": [
    "letterboxd",
    "films",
    "social",
    "api"
  ],
  "author": "Charlie Tonneslan",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "node-pg-migrate": "^8.0.3",
    "nodemon": "^3.1.10"
  }
}
